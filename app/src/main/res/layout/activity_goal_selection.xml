<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GoalSelectionActivity">

    <!-- Toolbar (Top Navigation Bar) -->
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:title="Goal Selection"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

            <!-- Scanner Button with Icon -->
            <ImageButton
                android:id="@+id/buttonScanner"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/scanner"
                android:contentDescription="Scanner"
                android:layout_gravity="end" />
        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>

    <!-- Content (Your Activity Layout) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <FrameLayout
            android:id="@+id/content_frame"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <Button
                    android:id="@+id/buttonRecipes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="View Recipes"
                    style="@style/Widget.AppCompat.Button.Colored" />

                <Button
                    android:id="@+id/buttonExercises"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="View Exercises"
                    style="@style/Widget.AppCompat.Button.Colored" />
            </LinearLayout>
        </FrameLayout>
    </LinearLayout>

    <!-- Navigation Drawer (Side Panel) -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigation_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:menu="@menu/drawer_menu"
        app:headerLayout="@layout/nav_header" />
</androidx.drawerlayout.widget.DrawerLayout>
