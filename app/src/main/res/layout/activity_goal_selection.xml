<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GoalSelectionActivity">

    <!-- Main Content -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Toolbar (Top Navigation Bar) -->
        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:title="Goal Selection"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

                <!-- Scanner Button with Icon -->
                <ImageButton
                    android:id="@+id/buttonScanner"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/scanner"
                    android:contentDescription="Scanner"
                    android:layout_gravity="end" />
            </androidx.appcompat.widget.Toolbar>
        </com.google.android.material.appbar.AppBarLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Title for Diet Plan -->
            <TextView
                android:id="@+id/textViewPlanTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:text="Select a diet type to see the plan"
                android:textSize="18sp"
                android:textStyle="bold" />

            <!-- List of Diet Types -->
            <ListView
                android:id="@+id/dietTypeListView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:divider="@android:color/darker_gray"
                android:dividerHeight="1dp"
                android:layout_weight="0.3"/>

            <!-- List of Day-wise Diet Plan -->
            <ListView
                android:id="@+id/dayWiseDietListView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:divider="@android:color/darker_gray"
                android:dividerHeight="1dp"
                android:layout_weight="0.7"/>
        </LinearLayout>
    </LinearLayout>

    <!-- Navigation Drawer (Side Panel) -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigation_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:menu="@menu/drawer_menu"
        app:headerLayout="@layout/nav_header" />
</androidx.drawerlayout.widget.DrawerLayout>
